

@page
@using Microsoft.AspNetCore.Identity
@inject GestionPresence.Data.ApplicationDbContext _db

@model GestionPresence.Areas.Presences.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<h1>Présences et Absences</h1>
<hr>


<div class="row">
<div class="col-md-6">
<h3>Les présences</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Etudiant
            </th>
          
        </tr>
    </thead>
    <tbody style="background-color:green;color:white">
@foreach (var item in Model.Presences){

    
        <tr>
            <td>
              
            @item.Inscription.Etudiant.Nom  @item.Inscription.Etudiant.Prenom 

                
            </td>

        </tr>

        }
    </tbody>
</table>
       


</div>



<div class="col-md-6">
<h3>Les Absences</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Etudiant
            </th>
          
        </tr>
    </thead>
    <tbody style="background-color:red;color:white">
@foreach (var item in Model.Absences) {

    
        <tr>
            <td>
              
            @item.Etudiant.Nom  @item.Etudiant.Prenom 

                
            </td>

        </tr>

        
       
}
    </tbody></table>

</div>

</div>

    </tbody>
</table>
