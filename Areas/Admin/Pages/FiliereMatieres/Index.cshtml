@page
@model gestionpresence.Areas.Admin.Pages.FiliereMatieres.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Matieres de @Model.nomfiliere</h1>

<p>
    <a asp-page="Create" asp-route-id="@Model.idfiliere">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FiliereMatiere[0].Matiere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FiliereMatiere[0].Prof)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FiliereMatiere) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Matiere.Libelle)
            </td>
            <td>
              @item.Prof.Nom @item.Prof.Prenom
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
