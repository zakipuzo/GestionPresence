@page
@model gestionpresence.Areas.Admin.Niveaux.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Niveau</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Niveau.Numero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Niveau.Numero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Niveau.AnneeUniversitaire)
        </dt>
        <dd class="col-sm-10">
            @Model.Niveau.AnneeUniversitaire.AnneeString()
        </dd>
    </dl>
</div>
<div>
    @if(Model.NiveauFilieres==null){
        <span>Aucune Filiere</span>

    }
    else{

   <ul>
     @foreach (var item in Model.NiveauFilieres)
    {
       <li>
          
            <a asp-page="../Filieres/Details" asp-route-id="@item.ID"> @item.Libelle</a>
       </li>
        
    }
    </ul>
     }
    

<a class="btn" asp-page="../Filieres/Create" >Ajouter Filiere</a>
    

    <a asp-page="./Edit" asp-route-id="@Model.Niveau.ID">Edit</a> |
