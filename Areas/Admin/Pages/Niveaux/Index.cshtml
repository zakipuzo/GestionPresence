@page
@model gestionpresence.Areas.Admin.Niveaux.IndexModel

@{
    ViewData["Title"] = "Index";

    string[] anneenum=new string[]{"Première","Deuxième","Troisième","Quatrième","Cinquième"};
}

<h1>Liste des Niveaux</h1>

<p>
    <a asp-page="Create" asp-route-id="@Model.idannee">Nouveau</a>
</p>
<table id="mytable" class="table">
    <thead>
        <tr>
            <th>
                Niveaux
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Niveau) {
        <tr>
            <td>
                @anneenum[item.Numero-1] année


            
            </td>
            <td>
                <a  asp-area="Admin" asp-page="/Filieres/Index" asp-route-id="@item.ID">Filières</a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
